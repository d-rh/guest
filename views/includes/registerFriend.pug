block registration-form
  .container
    form(method="post" action="/register")
      .field
        label(class="label" for="formUserName") New username:
        input(class="input" name="formUserName" type="text" id="formUserName" 
        value=renderUserName ? renderUserName : "" placeholder="Choose a username")
      .field
        label(class="label" for="formFirstName") First Name:
        input(class="input" name="formFirstName" type="text" id="firstName" 
        value=renderFirstName ? renderFirstName : "" placeholder='Enter your first name')
      .field
        label(class="label" for="formLastName") Last Name:
        input(class="input" name="formLastName" type="text" id="lastName" 
        value=renderLastName ? renderLastName : "" placeholder='Enter your last name')
      .field
        label(class="label" for="password") New password:
        input(class="input" name="password" type="password" id="password")
      .field
        label(class="label" for="passConf") Confirm password:
        input(class="input" name="passConf" type="password" id="passConf")
      .control
        button(class="button is-primary" type="submit") Submit
